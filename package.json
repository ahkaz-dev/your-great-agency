{
  "name": "ai-browser-agent",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p . && vite build --config src/server/vite.config.ts",
    "dev": "run-p dev:server dev:ui",
    "dev:server": "ts-node --transpile-only src/index.ts",
    "dev:ui": "vite --config src/server/vite.config.ts",
    "agent": "ts-node --transpile-only src/index.ts --cli",
    "playwright": "playwright test"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "install": "^0.13.0",
    "node-fetch": "^3.3.2",
    "npx": "^10.2.2",
    "playwright": "^1.58.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.1.6"
  }
}
